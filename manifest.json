{
    "manifest_version": 3,
    "name": "YouTube Time Limiter",
    "version": "1.0",
    "description": "Limits YouTube access with a countdown timer and a challenge to regain access.",
    "permissions": [
        "tabs",
        "storage",
        "scripting",
        "declarativeNetRequest",
        "notifications"
    ],
    "host_permissions": [
        "*://www.youtube.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    }
}
